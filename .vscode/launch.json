{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug hw with LD_PRELOAD",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/gtk_program_src/hw",
            "args": [],
            "environment": [
                {
                    "name": "LD_PRELOAD",
                    "value": "${workspaceFolder}/tuxrup/build/libtuxrup_gtk4.so"
                }
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/tuxrup/build",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            },
            "preLaunchTask": "Build libtuxrup_gtk4.so"
        }
    ]
}
